set $dmenuRun "dmenu_run -l 15 -fn Anonymice\ Powerline\ Nerd\ Font\ Complete-13 -i -f -nb \#333333 -sb \#4e9c00"
bindsym $mod+d exec $dmenuRun 
bindsym $mod+space exec $dmenuRun


